<Window x:Class="ACT.FFXIVTranslate.TranslateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACT.FFXIVTranslate"
        mc:Ignorable="d"
        Title="TranslateWindow" Height="300" Width="300"
        AllowsTransparency="True" WindowStyle="None" Topmost="True" ShowInTaskbar="False" ShowActivated="False" Loaded="Window_Loaded">

    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="Black"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RichTextBox Name="RichTextBoxContent" Background="Transparent" Foreground="White" Cursor="Arrow" BorderThickness="0" IsReadOnly="True" IsUndoEnabled="False" VerticalScrollBarVisibility="Auto"/>
        <Label Name="LabelCopyRight" Grid.Row="1" HorizontalContentAlignment="Right" Visibility="Collapsed">
            <Label.Foreground>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </Label.Foreground>
            <Hyperlink NavigateUri="http://www.google.com" >
                 Copyright XXXXXXXXX
            </Hyperlink>
        </Label>
    </Grid>
</Window>
